---
export interface Props {
    title: string;
    content: string;
    img?: string;
    altText?: string;
    showTitle?: boolean;
}

const { title, content, img, altText, showTitle = true } = Astro.props
---

{showTitle && <h1 class="text-center text-6xl font-extrabold mt-10">{title}</h1>}
{img && (
    <div class="flex justify-center mt-10">
        <img src={img} width="1024" alt={altText || ''} />
    </div>
)}
<div class="entry-content wp-block-post-content mt-10 mb-20">
    <section set:html={content} />
</div>
